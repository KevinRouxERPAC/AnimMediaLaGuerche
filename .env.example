# Configuration d'environnement pour Anim'Média
# Copier ce fichier en .env et personnaliser les valeurs

# ========================================
# SÉCURITÉ - OBLIGATOIRE À CHANGER EN PRODUCTION
# ========================================

# Clés secrètes - GÉNÉRER DE NOUVELLES CLÉS ALÉATOIRES !
SECRET_KEY=your-super-secret-key-change-me-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-me-in-production

# Base de données admin - CHANGER LES MOTS DE PASSE !
ADMIN_USERNAME=admin
ADMIN_PASSWORD=animmedia2024

# ========================================
# CONFIGURATION SERVEUR
# ========================================

# Flask
FLASK_ENV=production
FLASK_DEBUG=False

# Serveur
HOST=0.0.0.0
PORT=8000

# ========================================
# SÉCURITÉ AVANCÉE
# ========================================

# Session
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# JWT
JWT_ACCESS_TOKEN_EXPIRES=3600  # 1 heure en secondes
JWT_REFRESH_TOKEN_EXPIRES=2592000  # 30 jours en secondes

# Rate limiting
RATELIMIT_ENABLED=True
RATELIMIT_DEFAULT="200 per day, 50 per hour"
RATELIMIT_LOGIN="5 per minute"

# ========================================
# CONFIGURATION OPTIONNELLE
# ========================================

# Domaine autorisé pour CORS (en production)
# ALLOWED_ORIGINS=https://votre-domaine.com,https://www.votre-domaine.com

# Logs
LOG_LEVEL=INFO
LOG_FILE=logs/animmedia.log

# Sauvegarde
BACKUP_ENABLED=True
BACKUP_RETENTION_DAYS=30

# Email (pour les notifications futures)
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_USE_TLS=True